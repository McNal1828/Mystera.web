<main class="container-xxl" style="height: auto; min-height: 100%">
    <div class="container">
        <h1 class="pb-4 mb-4 mt-4 fw-bold fst-italic border-bottom">선수단</h1>
        <div class="row row-cols-auto">
            <% PL.forEach((result)=>{ %>
            <div class="col-md-3 col-sm-2 col-lg-3 col-xl-2">
                <div class="card mb-3" style="width: auto">
                    <img
                        src="/Mysterya/image/profile/<%= result.number %>.jpg"
                        class="card-img-top img-thumbnail"
                    />
                    <div class="card-body">
                        <img
                            src="/Mysterya/image/support/<%= result['support'] %>.png"
                            class="img-fluid float-end"
                            width="60"
                            height="60"
                        />
                        <h5 class="card-title">
                            No.<%= result.number %><br /><%= result.name %>
                        </h5>
                        <a
                            href="/Mysterya/player/<%= result.number %>"
                            class="btn btn-dark"
                            >선택</a
                        >
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</main>
